<!DOCTYPE html>
<html lang="en">
    <head>
    <%- include('./partials/head') %>
    </head>
<body>
    <%- include('./partials/script') %>
    <%- include('./partials/nav') %>
    <div class="container mt-2">
      <div class="row">
    <%blog.forEach(element => { %>
      <div class=" col col-lg-3 col-md-6 m-2">
        <div class="card">
            <img src="<%= element.CoverImage %>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= element.title%></h5>
              <p class="card-text" style="height: 50px; overflow:hidden"><%= element.content%></p>
              <a href="/blog/<%= element._id %>" class="btn btn-primary">Go to Blog</a>
            </div>
          </div>
         </div> 
    <% }) %>
      </div>
      </div>
</body>
</html>